---
import { getCollection } from "astro:content";
import HeaderCard from "../components/HeaderCard.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const courses = await getCollection('courses')
---

<BaseLayout>
  <HeaderCard>
    <h1 class="font-bold text-2xl text-blue-900">รวมคอร์สเรียนฟรี สำหรับการพัฒนาโปรแกรม ในสายงาน Full-stack Web Developer</h1>
    <p class="mt-2">รับชมคอร์สเรียนฟรีผ่านทาง YouTube โดย นครโค้ด</p>
  </HeaderCard>

  <div class="my-8">
    <blockquote class="ml-2 pl-4 border-l-4 italic text-gray-800">
      สำหรับผู้เรียนใหม่ แนะนำให้เรียนตามลำดับจากเนื้อหาชุดแรก เพื่อทำความเข้าใจก่อนเริ่มเนื้อหาอื่นๆต่อไป หากสับสนลำดับการเรียนผ่างทาง YouTube แนะนำให้ดูตามลำดับที่เว็บไซต์นี้ จะถูกเรียงให้เหมาะสมแก่ผู้เรียนมากที่สุด
    </blockquote>
  </div>

  <div>
    <ul>
      {courses.map(course => (
        <li>
          <a href={course.slug}>{course.data.title}</a>
        </li>
      ))}
    </ul>
  </div>
</BaseLayout>
